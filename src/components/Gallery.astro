---
import art1 from "../assets/images/art1.jpg"
import art2 from "../assets/images/art2.jpg"
import art3 from "../assets/images/art3.jpg"
import art4 from "../assets/images/art4.jpg"
---

<div class="mx-12">
    <h1 class="my-24 text-center text-xl">
        Latest Art Pieces
    </h1>
    <div class="grid grid-cols-1 gap-24 xl:mx-48 xl:grid-cols-2">
        <div class="relative group cursor-pointer">
            <img 
                class="relative w-full z-10 transition-all rounded-lg group-hover:-translate-x-3" 
                src={art1.src} 
                alt="painting">
            <div 
                class="absolute left-0 top-0 w-full h-full bg-black rounded-lg transition-all group-hover:translate-x-4 group-hover:translate-y-4"></div>
        </div>
        <div class="relative group cursor-pointer">
            <img 
                class="relative w-full z-10 transition-all rounded-lg group-hover:-translate-x-3" 
                src={art2.src} 
                alt="painting">
            <div 
                class="absolute left-0 top-0 w-full h-full bg-black rounded-lg transition-all group-hover:translate-x-4 group-hover:translate-y-4"></div>
        </div>
        <div class="relative group cursor-pointer">
            <img 
                class="relative w-full z-10 transition-all rounded-lg group-hover:-translate-x-3" 
                src={art3.src} 
                alt="painting">
            <div 
                class="absolute left-0 top-0 w-full h-full bg-black rounded-lg transition-all group-hover:translate-x-4 group-hover:translate-y-4"></div>
        </div>
        <div class="relative group cursor-pointer">
            <img 
                class="relative w-full z-10 transition-all rounded-lg group-hover:-translate-x-3" 
                src={art4.src} 
                alt="painting">
            <div 
                class="absolute left-0 top-0 w-full h-full bg-black rounded-lg transition-all group-hover:translate-x-4 group-hover:translate-y-4"></div>
        </div>
    </div>
</div>